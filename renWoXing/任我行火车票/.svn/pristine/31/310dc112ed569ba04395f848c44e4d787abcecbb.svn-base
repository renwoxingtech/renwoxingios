    return;
    if (_is12306) {
        [self.navigationController popViewControllerAnimated:YES];
        return;
    }else{
        
    }
    if([[NSUserDefaults standardUserDefaults] boolForKey:@"isrxlogin"]){
        [self.navigationController popViewControllerAnimated:YES];
    }else{
        
    }
